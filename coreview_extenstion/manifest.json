{
    "manifest_version": 3,
    "name": "Shopping Review Summarizer",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "imgs/icon-16.png",
        "32": "imgs/icon-32.png",
        "48": "imgs/icon-48.png",
        "128": "imgs/icon-128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  